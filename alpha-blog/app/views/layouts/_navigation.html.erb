<header class="alb_head blue darken-3">
  <div class="row alb_layout_header_row alb_site_logo_row">
    <span class="alb_logo_title alb_font_family_color">
      <div class="valign-wrapper alb_valign_center alb_logo">
        <span class="alb_logo_item">AB</span>
      </div>
      <span class="alb_site_description">Blog Ruby on Rails with Materialize</span>
    </span>
  </div>
  <nav class=" blue darken-4" >
    <div class="container"> 
      <div class="nav-wrapper">
        <%= link_to 'Alpha Blog', root_path, class: "brand-logo font_family_GHal" %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to 'Articles', articles_path %>   
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Users', users_path %>
          <li>
            <a class="dropdown-button" href="#!" data-activates= "categories">
                Categories<i class="material-icons right">arrow_drop_down</i>
            </a>
          </li>
          <ul id="categories" class="dropdown-content">
            <li><%= link_to 'All categories', categories_path %></li>
            <% Category.all.each do |category| %>
              <li><%= link_to "#{category.name}", category_path(category) %></li>
            <% end %>
            <% if logged_in? and current_user.admin? %>
              <hr class="separate"/>
              <li><%= link_to 'Create New Category', new_category_path %></li>
            <% end %>
          </ul>
          <% if logged_in? %>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
            <li>
              <a class="dropdown-button" href="#!" data-activates= "userprofile">
                  Profile <%= "Admin" if current_user.admin? %> <i class="material-icons right">arrow_drop_down</i>
              </a>
            </li>
            <ul id="userprofile" class="dropdown-content">
              <li><%= link_to 'Edit your profile', edit_user_path(current_user) %></li>
              <li><%= link_to 'View your profile', user_path(current_user) %></li>
            </ul>
          <% else %>
            <li><%= link_to 'Log in', login_path %></li>
            <li><%= link_to 'Signup', signup_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
